{
  "name": "@suyanksaraswat/design-system",
  "version": "0.0.4",
  "description": "An accessible and customizable component library powered by shadcn/ui",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/suyanksaraswat/ui",
    "directory": "packages/design-system"
  },
  "keywords": [
    "react",
    "ui",
    "component",
    "library",
    "design",
    "system",
    "accessible",
    "a11y",
    "radix",
    "shadcn"
  ],
  "main": "dist/cjs/index.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./icons": {
      "import": "./dist/esm/icons.js",
      "require": "./dist/cjs/icons.cjs.js",
      "types": "./dist/icons.d.ts"
    },
    "./icons/*": {
      "import": "./dist/esm/*.js",
      "require": "./dist/cjs/*.cjs.js",
      "types": "./dist/*.d.ts"
    },
    "./*": {
      "import": "./dist/esm/*.js",
      "require": "./dist/cjs/*.cjs.js",
      "types": "./dist/*.d.ts"
    },
    "./theme.css": "./dist/theme.css",
    "./theme-v4.css": "./dist/theme-v4.css",
    "./tailwind.config.ts": "./dist/tailwind.config.ts",
    "./tailwind-v4.config.ts": "./dist/tailwind-v4.config.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "build:size": "pnpm build && du -h dist/esm/*.js | sort -hr && echo 'Gzipped sizes:' && gzip -c dist/esm/index.js | wc -c && echo 'bytes'",
    "dev": "rollup -c --watch --bundleConfigAsCjs",
    "lint": "eslint src --fix --max-warnings 0",
    "format": "prettier --write src",
    "clean": "rimraf .turbo node_modules dist",
    "ui": "pnpm dlx shadcn@latest"
  },
  "dependencies": {
    "@fastify/deepmerge": "^1.3.0",
    "@hookform/resolvers": "^3.3.2",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.0.3",
    "@tanstack/react-table": "^8.10.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "react-hook-form": "^7.47.0",
    "sonner": "^1.4.0",
    "tailwind-merge": "^1.14.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-react": "^7.27.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@suyanksaraswat/tsconfig": "workspace:*",
    "@types/node": "^20.19.13",
    "@types/react": "^18.2.28",
    "autoprefixer": "^10.4.16",
    "fs": "0.0.1-security",
    "lucide-react": "^0.288.0",
    "path": "^0.12.7",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "rollup": "^4.50.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "tsx": "^4.20.5",
    "tailwindcss": "^3.4.0 || ^4.0.0",
    "typescript": "^5.9.2",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "lucide-react": "*",
    "react": "^18",
    "tailwindcss": ">=3.0.0 || ^4.0.0",
    "zod": "^3"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
